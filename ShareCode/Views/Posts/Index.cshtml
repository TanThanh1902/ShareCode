@using ShareCode.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<tblPost>

@{
    DBShareCodeEntities db = new DBShareCodeEntities();
    tblCustom custom = db.tblCustoms.Find(1);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="border mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card p-3 py-4">
                <h5>Có hơn <b class="text-danger">1000</b> code trên topcodeonline.com</h5>
                <div class="row g-3 mt-2">
                    <div class="col-md-3">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" style="background: #00838f !important" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false"> Danh mục </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" href="#">Rural</a></li>
                                <li><a class="dropdown-item" href="#">Urban</a></li>
                                <li><a class="dropdown-item" href="#">All</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6"> <input type="text" class="form-control" placeholder="Nhập bất cứ từ khóa bạn muốn..."> </div>
                    <div class="col-md-3"> <button style="background: #00838f !important" class="btn btn-secondary btn-block"><i class="fa fa-search">&nbsp;</i>Tìm kiếm</button> </div>
                </div>
                <div class="mt-3">
                    <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" class="advanced"> Bộ lọc tìm kiếm <i class="fa fa-angle-down"></i> </a>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            <div class="row">
                                <div class="col-md-4"> <input type="text" placeholder="Property ID" class="form-control"> </div>
                                <div class="col-md-4"> <input type="text" class="form-control" placeholder="Search by MAP"> </div>
                                <div class="col-md-4"> <input type="text" class="form-control" placeholder="Search by Country"> </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-lg-9 most-recent">

        <!-- recently -->
        <h3 class="section-title-left" style="color: #00838f !important"> <i class="fa fa-search">&nbsp;</i>Có <b> @ViewBag.countPost</b> được tìm thấy </h3>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 mt-4">
                    <div class="ui special cards">
                        <div class="card w-100">
                            <div class="blurring dimmable image">
                                <div class="ui dimmer">
                                    <div class="content">
                                        <div class="center">
                                            <a href="@Url.Action("Details", "Posts", new { id = item.Post_ID})" class="ui inverted button">Xem</a>
                                        </div>
                                    </div>
                                </div>
                                <img src="~/Content/Layout/img/post/@item.Post_Avata" style="width: 100%; height: 120px">
                            </div>
                            <center>
                                <div class="btn-group w-100" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-secondary" style="border-radius: 0px 0px 0px 0px"><i class="fa fa-download">&nbsp;</i>@item.Post_CountDownLoad</button>
                                    <button type="button" class="btn btn-secondary" style="border-radius: 0px 0px 0px 0px"><i class="fa fa-eye">&nbsp;</i>@item.Post_View</button>
                                    <button type="button" class="btn btn-secondary" style="border-radius: 0px 0px 0px 0px"><i class="fa fa-heart">&nbsp;</i>@item.Post_Favorite</button>
                                </div>
                            </center>
                            <div class="content">
                                <a class="text-danger"><i class="fa fa-bookmark">&nbsp;</i>ASP.net</a>
                                <br />
                                <a style="color: brown">@(item.Post_Title.Length < 40 ? item.Post_Title : item.Post_Title.Substring(0,40)+"...")</a>
                                <div class="meta">
                                    <span class="date">@item.Post_DateCreate.Value.ToLongDateString()</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="pagination">
                @Html.PagedListPager(Model, page => Url.Action(HttpContext.Current.Request.RequestContext.RouteData.Values["Action"].ToString(), new { page }))
            </div>
        </div>
        <!-- //pagination -->
    </div>
    <div class="col-lg-3 trending mt-lg-0 mt-5 mb-lg-5 border">
        <div class="pos-sticky" style="padding: 10px">
            <div class="row">
                @Html.Action("InfoRight", "View")
            </div>

        </div>
    </div>
</div>