<div class="comment-form" id="formComment">
    @Html.Action("Create", "Comments", new { id = postid })
</div>

<script>
    function onSuccessCmt() {
        $('html, body').animate({
            scrollTop: $("#scrollComment").offset().top
        }, 500);
    }
</script>