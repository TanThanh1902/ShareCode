
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow">
                    <!--Quảng cáo-->
                    <div class="w3-content w3-section">
                        <img class="mySlides" src="https://sharecode.vn/assets/images/thiet-ke-website.jpg" style="width:100%; height: 70px">
                        <img class="mySlides" src="https://sharecode.vn/assets/images/code-hay-upload-kiem-tien.jpg" style="width:100%; height: 70px">
                        <img class="mySlides" src="https://sharecode.vn/assets/images/thiet-ke-website.jpg" style="width:100%; height: 70px">
                    </div>
                    <script>
                        var myIndex = 0;
                        carousel();

                        function carousel() {
                            var i;
                            var x = document.getElementsByClassName("mySlides");
                            for (i = 0; i < x.length; i++) {
                                x[i].style.display = "none";
                            }
                            myIndex++;
                            if (myIndex > x.length) { myIndex = 1 }
                            x[myIndex - 1].style.display = "block";
                            setTimeout(carousel, 2000); // Change image every 2 seconds
                        }
                    </script>
                </div>
            </div>
            <br /><br />
            <br /><br />
            <div class="col-lg-5">
                <div class="card shadow" style="padding: 10px">
                    <div class="row mt-1">
                        <div class="col-lg-12">
                            <h4 style="font-weight: bold" class="mt-3">Đăng nhập</h4>
                        </div>
                        <div class="col-lg-12 mt-2">
                            <button class="ui facebook button w-100" style="font-size: 15px">
                                <i class="facebook icon"></i>
                                Facebook
                            </button>
                        </div>
                        <div class="col-lg-12 mt-2">
                            <button class="ui google plus button w-100" style="font-size: 15px">
                                <i class="google plus icon"></i>
                                Google
                            </button>
                        </div>
                    </div>
                    @if (HttpContext.Current.Request.RequestContext.RouteData.Values["Action"].ToString() == "Register")
                    {
                        <p>Bạn đã có tài khoản? <a href="@Url.Action("Login","User")" class="text-success">Đăng nhập ngay</a></p>
                        <form class="ui form" action="@Url.Action("Register")" method="post">
                            <div class="field">
                                <label>Email</label>
                                <input type="email" name="Email" placeholder="Nhập Email" class="form-control" />
                            </div>
                            <div class="field">
                                <label>Tên hiển thị</label>
                                <input type="text" name="DisplayName" placeholder="Nhập tên hiển thị" class="form-control" />
                            </div>
                            <div class="field">
                                <label>Mật khẩu</label>
                                <input type="password" id="Password" name="Password" placeholder="Nhập mật khẩu" class="form-control" />
                            </div>
                            <div class="field">
                                <label>Xác nhận mật khẩu</label>
                                <input type="password" id="PassworkRes" name="PassworkRes" placeholder="Xác nhận mật khẩu" class="form-control" />
                            </div>
                            <input type="checkbox" />Tôi đồng ý với điều khoản sử dụng
                            <div class="ui error message"></div>
                            <button class="ui green submit button w-100"><i class="fas fa-sign-in-alt">&nbsp;</i>Đăng ký</button>
                        </form>
                    }
                    else
                    {
                        <p>Bạn chưa có tài khoản? <a href="@Url.Action("Register","User")" class="text-success">Đăng ký ngay</a></p>

                        using (Ajax.BeginForm("Login", "User", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "ajaxNotifiLogin" }))
                        {
                            <input type="hidden" name="TypeLogin" value="2" />
                            <div class="field">
                                <label>Email</label>
                                <input type="Email" name="Email" placeholder="Nhập Email" class="form-control" />
                            </div>
                            <div class="field">
                                <label>Mật khẩu</label>
                                <input type="password" name="Password" placeholder="Nhập mật khẩu" class="form-control" />
                            </div>
                            <input type="hidden" value="/Home/Index" name="ReturnUrl" />
                            <input type="checkbox" name="RememberMe" /><p>Nhớ tôi</p>
                            <button class="ui green button w-100"><i class="fas fa-sign-in-alt">&nbsp;</i>Đăng nhập</button>
                            <hr />
                            <div id="ajaxNotifiLogin"></div >
                            }
                        }
                </div>
            </div>
            <div class="col-lg-7">
                <div class="card shadow" style="padding: 10px">
