@using ShareCode.Models;
@model tblUser

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-success">Thông tin cá nhân của bạn chưa cập nhật Số điện thoại, vui lòng cập nhật Số điện thoại <a href="#" class="text-danger">TẠI ĐÂY</a> !</div>
        </div>
        <div class="col-lg-8">
            <div class="alert alert-danger">
                <h3 class="font-weight-bold">Đổi mật khẩu</h3>
            </div>

            <form class="ui form" onsubmit="return checkResetPass()" action="@Url.Action("ResetPassword")" method="post">
                <style>
                    ul li {
                        margin-top: 2%;
                    }
                </style>
                <ul>
                    <li class="field"><b>Mật khẩu cũ<b class="font-weight-bold text-danger">*</b></b> <input type="password" name="oldpass" id="oldpass" class="form-control" placeholder="Nhập mật khẩu cũ" /> </li>
                    <li class="field"><b>Mật khẩu mới<b class="font-weight-bold text-danger">*</b></b> <input type="password" id="NewPassword" name="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" /> </li>
                    <li class="field"><b>Xác nhận mật khẩu<b class="font-weight-bold text-danger">*</b></b> <input type="password" name="confirmpass" id="confirmpass" class="form-control" placeholder="Xác nhận mật khẩu" /> </li>

                    <li>
                        <div>
                            <span id="noti_resetpass"></span>
                        </div>
                        <div class="ui error message"></div>
                    </li>
                    <li><button type="submit" class="ui red button submit"><i class="fa fa-save">&nbsp;</i>Đổi mật khẩu</button></li>
                </ul>
            </form>
        </div>
        <div class="col-lg-4">
            @Html.Action("InfoRight", "View")
        </div>
    </div>
</div>
<input type="hidden" value="@Model.User_Password" id="pass" />
<script>
    function checkResetPass() {
        let pass = document.getElementById("pass").value;
        let oldpass = document.getElementById("oldpass").value;
        let confirmpass = document.getElementById("confirmpass").value;
        let newpass = document.getElementById("newpass").value;

        debugger
        if (oldpass != pass) {
            document.getElementById("noti_resetpass").innerText = "Mật khẩu không đúng!";
            return false;
        }
        else if (oldpass != confirmpass) {
            document.getElementById("noti_resetpass").innerText = "Mật khẩu không trùng khớp!";
            return false;
        }
        return true;
    }
</script>