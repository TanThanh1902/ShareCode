@using ShareCode.Models;
@model List<tblBlog>

<div class="col-lg-4 trending mt-lg-0 mt-5 mb-lg-5">
    <div class="pos-sticky">
        <h3 class="section-title-left">Tin tức nổi bậc </h3>

        @foreach (var item in Model)
        {
            <a href="@Url.Action("Details", "Blogs", new { id = item.BLog_ID})">
                <div class="row" style="padding-bottom: 10px">
                    <div class="col-lg-4">
                        <img src="~/Content/Layout/img/blog/@item.Blog_Image" style="width: 100%; height: 100px" />
                    </div>
                    <div class="col-lg-8">
                        <h4>@item.Blog_Title</h4>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
