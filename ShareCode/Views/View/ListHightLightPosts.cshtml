@using ShareCode.Models;
@model List<tblPost>

@foreach (var item in Model)
{
    <div class="row mt-2">
        <div class="col-lg-4">
            <img src="~/Content/Layout/img/post/@item.Post_Avata" style="width: 100%; height: 70px">
        </div>
        <div class="col-lg-8">
            <a href="@Url.Action("FilterPostsByCatID", "Posts", new { id = item.Post_Cat})" class="text-danger"><i class="fa fa-bookmark">&nbsp;</i>@item.tblCategory.Cat_Name</a>
            <br />
            <a href="@Url.Action("Details", "Posts", new { id = item.Post_ID})">@item.Post_Title</a>
            <br />
            <i class="fa fa-download text-primary">&nbsp;</i>@item.Post_CountDownLoad
            <i class="fa fa-eye text-dark">&nbsp;</i>@item.Post_View
            <i class="fa fa-heart text-danger">&nbsp;</i>@item.Post_Favorite
        </div>
        <div class="col-lg-12">
            <hr />
        </div>
    </div>
}