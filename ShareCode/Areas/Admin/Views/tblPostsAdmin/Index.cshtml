@using ShareCode.Models;
@model IEnumerable<ShareCode.Models.tblPost>

@{
    ViewBag.Title = "Danh sách code";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    DBShareCodeEntities db = new DBShareCodeEntities();
    DateTime ye = DateTime.Now;
}
@{ 
    List<tblCategory> tblCategory = db.tblCategories.ToList();
    List<tblGenre> tblGenres = db.tblGenres.ToList();
    List<tblGroupCode> tblGroupCodes = db.tblGroupCodes.ToList();
}
<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <!-- Page-header start -->
        <div class="page-header card">
            <div class="row align-items-end">
                <div class="col-lg-8">
                    <div class="page-header-title">
                        <i class="icofont icofont-file-code bg-c-blue"></i>
                        <div class="d-inline">
                            <h4>@ViewBag.Title</h4>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="index.html">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#!">Form Components</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#!">Form Components</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page-header end -->
        <!-- Page body start -->
        <div class="page-body" ng-app="myModule">
            <div class="row" ng-controller="myController">
                <div class="col-sm-12">
                    <!-- Basic Form Inputs card start -->
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-lg-3">
                                    <label class="font-weight-bold">Tìm kiếm từ khóa</label>
                                    <input type="text" class="form-control w-100" placeholder="Mã code" ng-model="textSearch.idp" />
                                </div>
                                <div class="col-lg-3">
                                    <label class="font-weight-bold">Danh mục</label>
                                    <select class="form-control" ng-model="textSearch.cate">
                                        <option value="">Tất cả danh mục</option>
                                        @foreach (var item in tblCategory)
                                        {
                                            <option value="@item.Cat_Name">@item.Cat_Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-3">
                                    <label class="font-weight-bold">Ngôn ngữ</label>
                                    <select class="form-control" ng-model="">
                                        <option value="">Tất cả ngôn ngữ</option>
                                        <option value="coin">Giá</option>
                                    </select>
                                </div>
                                <div class="col-lg-3">
                                    <label class="font-weight-bold">Thể loại</label>
                                    <select class="form-control" ng-model="textSearch.ge">
                                        <option value="">Tất cả thể loại</option>
                                        @foreach (var item in tblGenres)
                                        {
                                            <option value="@item.Genres_Name">@item.Genres_Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-3 mt-3">
                                    <label class="font-weight-bold">Hình thức</label>
                                    <select class="form-control" ng-model="textSearch.form">
                                        <option value="">Tất cả hình thức</option>
                                        @foreach (var item in tblGroupCodes)
                                        {
                                            <option value="@item.Group_Name">@item.Group_Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-3 mt-3">
                                    <label class="font-weight-bold">Trạng thái</label>
                                    <select class="form-control" ng-model="textSearch.ac">
                                        <option value="">Tất cả</option>
                                        <option value="true">Đã duyệt</option>
                                        <option value="false">Chưa duyệt</option>
                                    </select>
                                </div>
                                <div class="col-lg-2 mt-3">
                                    <label class="font-weight-bold text-primary">Ngày</label>
                                    <select class="form-control" ng-model="textSearch.date">
                                        <option value="">Tất cả</option>
                                        @for (var i = 1; i <= 31; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-2 mt-3">
                                    <label class="font-weight-bold text-primary">Tháng</label>
                                    <select class="form-control" ng-model="textSearch.month">
                                        <option value="">Tất cả</option>
                                        @for (var i = 1; i <= 12; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-2 mt-3">
                                    <label class="font-weight-bold text-primary">Năm</label>
                                    <select class="form-control" ng-model="textSearch.year">
                                        <option value="">Tất cả</option>
                                        @for (var i = 2019; i <= Int32.Parse(ye.Year.ToString()); i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-12 mt-3">
                                    <button class="btn btn-success" onclick="window.location.href='/Admin/tblPostsAdmin/Create'"><i class="fa fa-plus"></i>Thêm code</button>
                                </div>
                            </div>

                        </div>
                        <div class="card-block">
                            <style>
                                .sortorder:after {
                                    content: '\25bc';
                                }

                                .sortorder.reverse:after {
                                    content: '\25b2';
                                }
                            </style>
                            <table class="table">
                                <thead class="bg-dark">
                                    <tr class="font-weight-bold">
                                        <td ng-click="sortBy('idp')">Mã code<span class="sortorder" ng-show="propertyName === 'idp'" ng-class="{reverse: reverse}"></span></td>
                                        <td>Ảnh</td>
                                        <td ng-click="sortBy('name')">Tên<span class="sortorder" ng-show="propertyName === 'name'" ng-class="{reverse: reverse}"></span></td>
                                        <td ng-click="sortBy('cate')">Danh mục<span class="sortorder" ng-show="propertyName === 'cate'" ng-class="{reverse: reverse}"></span></td>
                                        <td ng-click="sortBy('ge')">Thể loại<span class="sortorder" ng-show="propertyName === 'ge'" ng-class="{reverse: reverse}"></span></td>
                                        <td ng-click="sortBy('form')">Hình thức<span class="sortorder" ng-show="propertyName === 'form'" ng-class="{reverse: reverse}"></span></td>
                                        <td ng-click="sortBy('ac')"><span class="sortorder" ng-show="propertyName === 'ac'" ng-class="{reverse: reverse}"></span>Tình trạng</td>
                                        <td ng-click="sortBy('coin')">Xu<span class="sortorder" ng-show="propertyName === 'coin'" ng-class="{reverse: reverse}"></span></td>
                                        <td><i class="fa fa-cog">&nbsp;</i></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="post in post | filter:textSearch | orderBy:propertyName:reverse">
                                        <td>{{post.idp}}</td>
                                        <td><img style="width: 50px; height: 50px" src="~/Content/Layout/img/post/{{post.img}}" /></td>
                                        <td>{{post.name}}</td>
                                        <td>{{post.cate}}</td>
                                        <td>{{post.ge}}</td>
                                        <td>{{post.form}}</td>
                                        <td>{{post.ac}}</td>
                                        <td>{{post.coin}}</td>
                                        <td>
                                            <a target="_blank" href="/Posts/Details/{{post.id}}"><i class="fa fa-eye"></i></a> |
                                            <a href="/Admin/tblPostsAdmin/Edit/{{post.id}}"><i class="fa fa-edit"></i></a> |
                                            <a href="/Admin/tblPostsAdmin/Delete/{{post.id}}"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Input Alignment card end -->
                </div>
            </div>
        </div>
        <!-- Page body end -->
    </div>
</div>
@*<td>
    
</td>*@
<script>
    var app = angular
        .module("myModule", [])
        .controller("myController", function ($scope) {

            var post = [
                @foreach(var item in Model.OrderByDescending(n=>n.Post_DateCreate))
                {
                    @: { idp: "@Html.Raw(item.Post_Code)",img: "@item.Post_Avata",name: "@Html.Raw(item.Post_Title)",cate: "@item.tblCategory.Cat_Name",form: "@Html.Raw(item.tblGroupCode.Group_Name)",ac: "@item.Post_Active", coin: "@Html.Raw(item.Post_Price)",id: @item.Post_ID,ge: "@Html.Raw(item.tblGenre.Genres_Name)",date: "@item.Post_DateCreate.Value.Date",month: "@item.Post_DateCreate.Value.Month",year: "@item.Post_DateCreate.Value.Year"},
                }
            ];

            $scope.post = post;
            $scope.propertyName = 'coin';
            $scope.reverse = true;
            $scope.post = post;

            $scope.sortBy = function (propertyName) {
                $scope.reverse = ($scope.propertyName === propertyName) ? !$scope.reverse : false;
                $scope.propertyName = propertyName;
            };
            
        });
</script>